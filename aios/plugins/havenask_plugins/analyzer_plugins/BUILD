package(default_visibility=['//aios/plugins/havenask_plugins:__subpackages__'])
load(
    '@rules_cc//examples:experimental_cc_shared_library.bzl',
    'cc_shared_library'
)
load('//bazel:bundle.bzl', 'bundle_files')
bundle_files(
    name='jieba_analyzer_plugin_package',
    prefix='usr/local/lib64',
    srcs=[':jieba_analyzer'],
    deps=[':jieba_dict_package'],
    visibility=['//visibility:public']
)
bundle_files(
    name='jieba_dict_package',
    prefix='usr/local/share/jieba_dict',
    strip_prefix='cppjieba/dict',
    srcs=['@cppjieba//:cppjieba_dict'],
    deps=[],
    visibility=['//visibility:public']
)
cc_shared_library(
    name='jieba_analyzer',
    visibility=['//visibility:public'],
    roots=[':analyzer'],
    preloaded_deps=[
        '//aios/apps/facility/build_service:bs_analyzer',
        '//aios/filesystem/fslib:fslib-framework'
    ],
    static_deps=['@cppjieba//:cppjieba', '@cppjieba//:limonp']
)
cc_library(
    name='analyzer',
    srcs=glob(['*.cpp']),
    hdrs=glob(['*.h']),
    deps=[
        '//aios/apps/facility/build_service:bs_analyzer',
        '//aios/filesystem/fslib:fslib-framework', '@cppjieba//:cppjieba',
        '@cppjieba//:limonp'
    ],
    alwayslink=True,
    visibility=['//visibility:public']
)
