                    {
                        "key": "-n",
                        "value": ""
                    },
                    {
                        "key": "--env",
                        "value": "roleType=searcher"
                    },
                    {
                        "key": "--env",
                        "value": "decodeUri=true"
                    },
                    {
                        "key": "--env",
                        "value": "naviThreadNum=0"
                    },
                    {
                        "key": "--env",
                        "value": "kmonitorSinkAddress=127.0.0.1"
                    },
                    {
                        "key": "--env",
                        "value": "userName=admin"
                    },
                    {
                        "key": "--env",
                        "value": "dpThreadNum=1"
                    },
                    {
                        "key": "--env",
