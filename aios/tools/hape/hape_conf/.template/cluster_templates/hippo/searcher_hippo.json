{
    "role_desc": {
        "containerConfigs":[
            "BIND_MOUNTS=(/home/admin/${appName}_${roleName}:/home/admin)",
            "WORKING_DIRS=(ha_sql:/home/admin/)"
        ],
        "minHealthCapacity": 0,
        "count": {{havenask.searcherReplicaCount}},
        "healthCheckerConfig":
          {
          "args":
            [
              {
              "key":
                "PORT",
              "value":
                "45900"
              },
              {
              "key":
                "CHECK_PATH",
              "value":
                "\/HeartbeatService\/heartbeat"
              }
            ],
          "name":
            "adv_lv7"
        },
        "resources": [
            {
                "resources": [
                    {
                        "amount": 200,
                        "name": "cpu",
                        "type": "SCALAR"
                    },
                    {
                        "amount": 10240,
                        "name": "mem",
                        "type": "SCALAR"
                    }{%if customize.mode != "k8s"%},
                    {
                        "amount": 0,
                        "name": "searcher",
                        "type": "TEXT"
                    }{%endif%},
                    {
                        "amount": 0,
                        "name": "{{havenask.serviceName}}:searcher",
                        "type": "EXCLUSIVE"
                    }
                ]
            }
        ],
        "packageInfos": [
            {
                "packageURI": "{{havenask.image}}",
                "type": "IMAGE"
            }
        ],
        "processInfos": [
            {
                "args": [
                    {
                        "key": "-r",
                        "value": "{{common.binaryPath}}"
                    },
                    {
                        "key": "--port",
                        "value": "arpc:45898"
                    },
                    {
                        "key": "--port",
                        "value": "http:45899"
                    },
                    {
                        "key": "--env",
                        "value": "httpPort=45900"
                    },
                    {
                        "key": "--env",
                        "value": "gigGrpcPort=45901"
                    },
                    {
                        "key": "--env",
                        "value": "port=45898"
                    },
                    {
                        "key": "-l",
                        "value": "{{common.binaryPath}}/usr/local/etc/sql/sql_alog.conf"
                    },
                    {
                        "key": "-c",
                        "value": "{{common.binaryPath}}/usr/local/etc/sql/search_server.cfg"
                    },
                    {
                        "key": "--env",
                        "value": "serviceName=havenask.{{ havenask.serviceName }}.env^online"
                    },
                    {
                        "key": "--env",
                        "value": "amonitorPath={{havenask.serviceName}}/searcher"
                    },
                    {
                        "key": "--env",
                        "value": "haCompatible=true"
                    },
                    {
                        "key": "--env",
                        "value": "zoneName=searcher"
                    },
                    {
                        "key": "--env",
                        "value": "roleName=seacher_partition_0"
                    },
                    {
                        "key": "--env",
                        "value": "kmonitorNormalSamplePeriod=1"
                    },
                    {
                        "key": "--env",
                        "value": "naviPoolModeAsan=1"
