<?xml version='1.0' encoding='utf-8'?>
<Root>
    <TestCase name="agg_group_by_order_by_agg_field">
        <Resource name="sqls">
            <Element>
<![CDATA[
SELECT brand, SUM(price) FROM phone GROUP BY (brand) ORDER BY
      SUM(price) LIMIT 1000
]]>
</Element>
        </Resource>
        <Resource name="column_names">"brand", "SUM(price)"</Resource>
        <Resource name="column_types">multi_char, double</Resource>
        <Resource name="seq_required">false</Resource>
        <Resource name="kvpair">databaseName:phone;</Resource>
        <Resource name="expect_data">
<![CDATA[
"Nokia", 169
"Xiaomi", 899
"Meizu", 1299
"OPPO", 2999
"Samsung",  5688
"Huawei", 7987
"Apple", 13895
]]>
</Resource>
<Resource name="plan">
<![CDATA[
SinkOp#4(type=api)
    ExchangeOp#3(distribution={type:SINGLETON})
        SortOp#2(directions=[ASC],limit=1000,order_fields=[$SUM(price)])
            AggregateOp#1(agg_funcs=[{approximate:false,distinct:false,filter_arg:-1,input:[$price],name:SUM,output:[$SUM(price)],type:NORMAL}],group_fields=[$brand],scope=NORMAL)
                TableScanOp#0(catalog_name=default,db_name=phone,limit=2147483647,output_fields=[$brand,$price],push_down_ops=[{attrs:{output_fields:[$brand,$price]},op_name:CalcOp}],table_name=phone,table_type=normal,use_nest_table=false)
]]>
</Resource>
</TestCase>
</Root>